def clicked2():
    name = e1.get()
    year = e2.get()
    position = e3.get()
    number = e4.get()
    height = e5.get()
    weight = e6.get()
    hometown = e7.get()
    state = e8.get()
    school = e9.get()
    addAthlete(name, year, position, number, height, weight, hometown, state, school)
    e1.delete(0, END)
    e2.delete(0, END)
    e3.delete(0, END)    
    e4.delete(0, END)
    e5.delete(0, END)
    e6.delete(0, END)
    e7.delete(0, END)
    e8.delete(0, END)
    e9.delete(0, END)
def clicked3():
    athlete = e31.get()
    deleteAthlete(athlete)
    e31.delete(0, END)
def clicked4():
    athlete = e41.get()
    editAthlete(athlete)
    e41.delete(0, END)
